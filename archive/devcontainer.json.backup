{
	"name": "Example Kutespace",
	"image": "ghcr.io/kutespaces/example-project:devcontainer",
	// do not change these if you want Docker in Docker support
	"runArgs": [
		"--init",
		"--privileged"
	],
	"overrideCommand": true,
	// some base images require a specific user name
	"containerUser": "vscode",
	"containerEnv": {
		"EDITOR": "code --wait",
	},
	// Set container specific settings
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"files.trimTrailingWhitespace": true,
				"files.trimFinalNewlines": true,
				"files.insertFinalNewline": true,
				"workbench.welcomePage.walkthroughs.openOnInstall": false
			},
			"extensions": [
				"golang.go",
				"ms-azuretools.vscode-docker",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"gruntfuggly.todo-tree",
				"mutantdino.resourcemonitor",
				"redhat.vscode-yaml",
				"humao.rest-client"
			]
		},
		"codespaces": {
			"openFiles": [
				"docs/devcontainer.md"
			]
		}
	},
	"hostRequirements": {
		"cpus": 4
	},
	"forwardPorts": [
		6060,
		6443,
		8000,
		8080,
		8081
	],
	"portsAttributes": {
		"6060": {
			"label": "Godoc"
		},
		"6443": {
			"label": "K8s API"
		},
		"8000": {
			"label": "k3d Ingress"
		},
		"8080": {
			"label": "Operator Metric Endpoint"
		},
		"8081": {
			"label": "Operator Probe Endpoint"
		}
	},
	"waitFor": "postCreateCommand",
	// commands are run in exactly this sequence:
	"onCreateCommand": "/bin/bash -c .devcontainer/on-create.sh",
	"updateContentCommand": "/bin/bash -c .devcontainer/update-content.sh",
	"postCreateCommand": "/bin/bash -c .devcontainer/post-create.sh",
	"postStartCommand": "/bin/bash -c .devcontainer/post-start.sh"
}
